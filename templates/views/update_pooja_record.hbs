<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>By Devotee Name</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcnameslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <link rel="stylesheet" href="../public/style.css">
</head>

<body style="background-color: #E5E4E2; overflow-y:hidden;">
    <!-- Component Top Navbar -->
    {{>top_navbar}}
    <div class="col-sm-12">
        <div class="row">
            {{>side_navbar}}
            <div class="col-sm-10 px-0">
                <div class="container-fluid px-3">
                    <div class="row">
                        <div class="col-sm-7">
                            <div class="card shadow-sm" style="margin-top : 10px; max-height:93vh;">
                                <div class="card-body overflow-auto">
                                    <h3 class="text-center">Update Pooja Record</h3>
                                    <center>
                                        <hr style="background-color: black; width:85%">
                                    </center>
                                    <br>

                                    <form action="/pooja/save_update/{{record._id}}" method="POST">
                                        <div class="form-group row">
                                            <div class="col-sm-4">
                                                <center>
                                                    <label for="dev_name"
                                                        class="col-form-label font-weight-bold">Devotee
                                                        Name : </label>
                                                </center>
                                            </div>
                                            <div class="col-sm-6">
                                                <input type="text" name="dev_name"
                                                    class="form-control bg-light font-weight-bold" id="dev_name"
                                                    placeholder="" value="{{record.devotee_name}}">
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <div class="col-sm-4">
                                                <center>
                                                    <label for="total_amount"
                                                        class="col-form-label font-weight-bold">Nakshatram : </label>
                                                </center>
                                            </div>
                                            <div class="col-sm-6">
                                                <select class="form-select bg-light font-weight-bold"
                                                    aria-label="Default select example" name="birth_star">
                                                    <option value="-" disabled>Select Birth Start </option>
                                                    <option value="{{record.birth_star}}" selected>{{record.birth_star}}
                                                    </option>
                                                    <option value="Anizham">Anizham</option>
                                                    <option value="Ashwathi">Ashwathi</option>
                                                    <option value="Atham">Atham</option>
                                                    <option value="Avittam">Avittam</option>
                                                    <option value="Ayilyam">Ayilyam</option>
                                                    <option value="Bharani">Bharani</option>
                                                    <option value="Chathayam">Chathayam</option>
                                                    <option value="Chithira">Chithira</option>
                                                    <option value="Chothi">Chothi</option>
                                                    <option value="Karthika">Karthika</option>
                                                    <option value="Makam">Makam</option>
                                                    <option value="Makayiram">Makayiram</option>
                                                    <option value="Moolam">Moolam</option>
                                                    <option value="Pooradam">Pooradam</option>
                                                    <option value="Pooram">Pooram</option>
                                                    <option value="Pooyam">Pooyam</option>
                                                    <option value="Pooruruttathi">Pooruruttathi</option>
                                                    <option value="Punartham">Punartham</option>
                                                    <option value="Revathi">Revathi</option>
                                                    <option value="Rohini">Rohini</option>
                                                    <option value="Thiruvathira">Thiruvathira</option>
                                                    <option value="Thiruvonam">Thiruvonam</option>
                                                    <option value="Thrikketta">Thrikketta</option>
                                                    <option value="Uthradam">Uthradam</option>
                                                    <option value="Uthram">Uthram</option>
                                                    <option value="Uthrattathi">Uthrattathi</option>
                                                    <option value="Visakham">Visakham</option>
                                                </select>
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <div class="col-sm-4">
                                                <center>
                                                    <label for="pooja_date"
                                                        class="col-form-label font-weight-bold">Pooja Date
                                                        : </label>
                                                </center>
                                            </div>
                                            <div class="col-sm-6">
                                                <input type="date" name="pooja_date"
                                                    class="form-control bg-light font-weight-bold" id="name"
                                                    placeholder="" value="{{record.pooja_date}}">
                                            </div>
                                        </div>

                                        <div class="col-sm-12">
                                            <div class="container">
                                                <center>
                                                    <table class="table table-striped bg-light text-center w-75 px-2"
                                                        id="table">
                                                        <thead>
                                                            <tr>
                                                                <th>Vazhipadu</th>
                                                                <th>Rate</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            <tr>
                                                                <td style="width: 50%;">
                                                                    <select name="pooja_name" id="vazhipadu_select_0"
                                                                        class="form-select text-center vazhipadu-select font-weight-bold">
                                                                        <option value="{{record.vazhipadu_name}}"
                                                                            selected>{{record.vazhipadu_name}}</option>
                                                                        {{#each all_poojas}}
                                                                        <option value="{{this.vazhipadu}}">
                                                                            {{this.vazhipadu}}</option>
                                                                        {{/each}}
                                                                    </select>
                                                                </td>
                                                                <td style="width: 28%;">
                                                                    <input type="text" name="rate"
                                                                        class="form-control font-weight-bold table_input rate-input text-center"
                                                                        id="rate" placeholder="" value="{{record.rate}}"
                                                                        readonly>
                                                                </td>
                                                            </tr>
                                                        </tbody>
                                                    </table>
                                                </center>
                                            </div>
                                        </div>
                                        <br>
                                        <div class="col-sm-12">
                                            <center>
                                                <button type="submit" class="btn btn-dark font-weight-bold"
                                                    id="submit_btn">Update
                                                    Vazhipadu</button>
                                                <button type="reset" class="btn btn-warning font-weight-bold">Clear
                                                    Form</button>
                                            </center>
                                        </div>
                                    </form>
                                    <br>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </div>
    </div>
    <!-- component Side Navbar -->

    <!-- Main Form -->
</body>

</html>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $(document).on('change', '.vazhipadu-select', function () {
            var selectedVazhipadu = $(this).val();
            var rateInput = $('#rate'); // The single rate input field

            if (selectedVazhipadu !== '-') {
                $.ajax({
                    url: '/pooja/get-rate/' + encodeURIComponent(selectedVazhipadu),
                    method: 'GET',
                    success: function (data) {
                        console.log('Success:', data);
                        if (data.rate !== null) {
                            rateInput.val(data.rate);
                        } else {
                            rateInput.val('');
                            alert('Rate not found for selected Vazhipadu.');
                        }
                    },
                    error: function (xhr, status, error) {
                        console.error('Error:', error);
                        alert('Error fetching rate.');
                    }
                });
            } else {
                rateInput.val('');
            }
        });
    });
</script>