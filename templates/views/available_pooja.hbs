<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>By Devotee Name</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcnameslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <link rel="stylesheet" href="../public/style.css">
</head>

<body style="background-color: #E5E4E2;">
    <!-- Component Top Navbar -->
    {{>top_navbar}}
    <div class="col-sm-12">
        <div class="row">
            {{>side_navbar}}
            <div class="col-sm-10 px-0">
                <div class="container-fluid px-3">
                    <div class="row">
                        <div class="col-sm-7">
                            <div class="card shadow-sm" style="margin-top : 10px; max-height:93vh;">
                                <div class="card-body overflow-auto">
                                    <h3 class="text-center">New Vazhipadu</h3>
                                    <center>
                                        <hr style="background-color: black; width:85%">
                                    </center>
                                    <br>
                                    
                                    <form action="/pooja/add_vazhipadu" method="POST">
                                        <div class="form-group row">
                                            <div class="col-sm-4">
                                                <center>
                                                    <label for="vazhipadu_name"
                                                        class="col-form-label font-weight-bold">Vazhipadu : </label>
                                                </center>
                                            </div>
                                            <div class="col-sm-6">
                                                <input type="text" name="vazhipadu_name" class="form-control bg-light font-weight-bold"
                                                    id="vazhipadu_name" placeholder="" value="">
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <div class="col-sm-4">
                                                <center>
                                                    <label for="rate"
                                                        class="col-form-label font-weight-bold">Rate : </label>
                                                </center>
                                            </div>
                                            <div class="col-sm-6">
                                                <input type="text" name="rate" class="form-control bg-light font-weight-bold"
                                                    id="rate" placeholder="" value="">
                                            </div>
                                        </div>

                                        
                                        <br>
                                        <div class="col-sm-12">
                                            <center>
                                                <button type="submit" class="btn btn-dark font-weight-bold" id="submit_btn">Add
                                                    Vazhipadu</button>
                                                <button type="reset" class="btn btn-primary font-weight-bold">Clear Form</button>
                                            </center>
                                        </div>
                                    </form>
                                    <br>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-5">
                            <div class="card" style="margin-top : 10px;">
                                <div class="card-body">
                                    <div class="container">
                                        <h4 class="text-center">All Vazhipadu</h4>
                                        <hr style="background-color: black;">
                                    </div>
                                    <table class="table table-bordered border-dark text-center font-weight-bold">
                                        <thead class="thead-dark">
                                            <tr>
                                                <th>Sr No.</th>
                                                <th>Vazhipadu</th>
                                                <th>rate</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{#each available}}
                                                <tr>
                                                    <td>{{increment @index}}</td>
                                                    <td>{{this.vazhipadu}}</td>
                                                    <td>{{this.rate}}</td>
                                                </tr>
                                            {{/each}}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <!-- component Side Navbar -->

    <!-- Main Form -->
</body>
</html>

