<body style="background-color: #E5E4E2;">
    <!-- Component Top Navbar -->
    {{>top_navbar}}
    <div class="col-sm-12">
        <div class="row">
            {{>side_navbar}}
            <div class="col-sm-10 px-0">
                <div class="container-fluid px-3">
                    <div class="row">
                        <div class="col-sm-7">
                            <div class="card shadow-sm" style="margin-top : 10px; max-height:93vh;">
                                <div class="card-body overflow-auto">
                                    <h3 class="text-center">Vazhipadu Name</h3>
                                    <center>
                                        <hr style="background-color: black; width:85%">
                                    </center>
                                    <br>

                                    <form action="/pooja/add_pooja_name" method="POST">
                                        <div class="form-group row">
                                            {{!-- <div class="col-sm-4">
                                                <center>
                                                    <label for="dev_name"
