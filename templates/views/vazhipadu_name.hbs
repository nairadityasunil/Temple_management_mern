                                            <div class="container">
                                                <center>
                                                    <table class="table table-striped bg-light text-center w-75 px-2"
                                                        >
                                                        <thead>
                                                            <tr>
                                                                <th>Vazhipadu</th>
                                                                <th>Rate</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            <td style="width: 50%;">
                                                                <select name="pooja_name"
                                                                    id="vazhipadu_select_0"
