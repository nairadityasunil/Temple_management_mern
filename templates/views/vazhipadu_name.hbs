                                                                    {{/each}}
                                                                </select>
                                                            </td>
                                                            <td style="width: 28%;">
                                                                <input type="text" name="rate"
                                                                    class="form-control font-weight-bold table_input rate-input text-center"
                                                                    id="rate" placeholder="" value="" readonly>
                                                            </td>
                                                            
                                                        </tbody>
                                                    </table>
                                                </center>
                                            </div>
                                        </div>
                                        </div>

                                        
                                        <div class="form-group row">
                                            <div class="col-sm-4">
                                                <center>
                                                    <label for="pooja_date"
                                                        class="col-form-label font-weight-bold">Pooja Date
                                                        : </label>
                                                </center>
                                            </div>
                                            <div class="col-sm-6">
                                                <input type="date" name="pooja_date"
                                                    class="form-control bg-light font-weight-bold" id="name"
