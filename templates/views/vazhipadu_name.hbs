                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{#each records_today}}
                                            <tr>
                                                <td>{{increment @index}}</td>
                                                <td>{{this.vazhipadu_name}}</td>
                                                <td>{{this.devotee_name}}</td>
                                                <td>{{this.birth_star}}</td>
                                            </tr>
                                            {{/each}}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <!-- component Side Navbar -->

    <!-- Main Form -->
</body>

</html>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
 $(document).ready(function () {
    $('#pooja_name').addClass('navbar-hover_active');
    var i = 0; // Counter for dynamic rows

    $('#split_btn').click(function () {
        ++i;
        $('#table').append(
            `<tr>
            <td>
                <input type="text" name="inputs1[${i}][devotee_name]" class="form-control table_input text-center font-weight-bold" id="name_${i}" placeholder="Devotee Name" value="">
            </td>
            <td>
                <select class="form-select bg-light font-weight-bold text-center"
                    aria-label="Default select example"
                    name="inputs1[${i}][star]">
                    <option value="-" disabled>Select Birth Star</option>
                    <option value="-">- </option>
                    <option value="Anizham">Anizham</option>
                    <option value="Ashwathi">Ashwathi</option>
                    <option value="Atham">Atham</option>
                    <option value="Avittam">Avittam</option>
                    <option value="Ayilyam">Ayilyam</option>
                    <option value="Bharani">Bharani</option>
                    <option value="Chathayam">Chathayam</option>
                    <option value="Chithira">Chithira</option>
                    <option value="Chothi">Chothi</option>
                    <option value="Karthika">Karthika</option>
                    <option value="Makam">Makam</option>
                    <option value="Makayiram">Makayiram</option>
                    <option value="Moolam">Moolam</option>
                    <option value="Pooradam">Pooradam</option>
                    <option value="Pooram">Pooram</option>
                    <option value="Pooyam">Pooyam</option>
                    <option value="Pooruruttathi">Pooruruttathi</option>
                    <option value="Punartham">Punartham</option>
                    <option value="Revathi">Revathi</option>
                    <option value="Rohini">Rohini</option>
                    <option value="Thiruvathira">Thiruvathira</option>
                    <option value="Thiruvonam">Thiruvonam</option>
                    <option value="Thrikketta">Thrikketta</option>
                    <option value="Uthradam">Uthradam</option>
                    <option value="Uthram">Uthram</option>
                    <option value="Uthrattathi">Uthrattathi</option>
                    <option value="Visakham">Visakham</option>
                </select>
            </td>
            <td>
                <button type="button" class="btn btn-danger remove-row">Remove</button>
            </td>
            </tr>`
        );
    });

    $(document).on('click', '.remove-row', function () {
        $(this).parents('tr').remove();
    });

    $(document).on('change', '.vazhipadu-select', function () {
        var selectId = $(this).attr('id');
        var index = selectId.split('_')[2]; // Extracting the index from the ID (e.g., 0 from vazhipadu_select_0)
        var selectedVazhipadu = $(this).val();
        var rateInput = $('#rate');

        if (selectedVazhipadu !== '-') {
            // AJAX request to get the rate
            $.ajax({
                url: '/pooja/get-rate/' + encodeURIComponent(selectedVazhipadu), // Ensure this matches the route
                method: 'GET',
                success: function (data) {
                    console.log('Success:', data); // Debugging log
                    if (data.rate !== null) {
                        rateInput.val(data.rate);
                    } else {
                        rateInput.val('');
                        alert('Rate not found for selected Vazhipadu.');
                    }
                },
                error: function (xhr, status, error) {
                    console.error('Error:', error); // Debugging log
                    alert('Error fetching rate.');
                }
            });

        } else {
            rateInput.val('');
        }
    });
});

</script>